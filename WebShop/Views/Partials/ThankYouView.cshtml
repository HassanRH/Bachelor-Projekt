@using WebShop.Entity
@model Order


@if (Model != null && Model.OrderLines != null)
{
    <div id="thankyouviewid" class="bg0 p-t-75 p-b-85">
        <div class="container">

            <div class="row">
                <div class="mx-auto mb-3">
                    <h2 class="ltext-101 cl2">Order and Billing Information</h2>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-10 col-lg-10 col-xl-10 bor10 p-lr-40 p-t-30 p-b-40 m-l-63 m-r-40 m-lr-0-xl p-lr-15-sm mb-3  mx-auto">
                    <div class="row">
                        <div class="mx-auto">
                            <div class="ltext-101 cl2 mb-3">
                                Order - @Model.OrderNo
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6 col-lg-6 col-xl-5 ">
                            <div class="ml-5 mb-5">
                                <div class="mb-5">
                                    <p class="ltext-101 cl2 mb-3"> Shipping Information </p>
                                    <p class="stext-110 cl2">@Model.Customer.Company</p>
                                    <p class="stext-110 cl2">@Model.Customer.Name</p>
                                    <p class="stext-110 cl2">@Model.Customer.Address</p>
                                    <p class="stext-110 cl2">@Model.Customer.Apartsuite</p>
                                    <p class="stext-110 cl2">@Model.Customer.City @Model.Customer.Zip </p>
                                    <p class="stext-110 cl2">@Model.Customer.Phone</p>
                                    <p class="stext-110 cl2">@Model.Customer.Email</p>
                                </div>

                                <div class="mt-5">
                                    <h3 class="mtext-110 cl2">Total Amount</h3>
                                    <a class="mtext-110 cl2 ml-1">@Model.getTotalPrice() Kr.</a>
                                </div>

                            </div>
                        </div>
                        <div class="col-xl-1 ml-auto"></div>

                        <div class="col-sm-6 col-lg-6 col-xl-5 ml-5">

                            <div>
                                <div class="mx-auto mb-3">
                                    <p class="ltext-101 cl2 mb-3"> Products </p>
                                </div>
                                <ul>

                                    @foreach (var product in Model.OrderLines)
                                    {
                                    <li class="mb-2">
                                        <div class="row">
                                            <a class="stext-110 cl2 ml-3">@product.Amount x </a>
                                            <img class="ml-1" src="/Umbraco/Api/Image/GetThumbnailFromProduct/@product.ProductID" height="50" />
                                            <a class="stext-110 cl2">@product.Name <br /> Sku: @product.ProductSKU</a>
                                        </div>
                                    </li>
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-1"></div>
                <div class="col-1">
                    <div class="header-cart-buttons mt-2">
                        <a href="/shop" class="flex-c-m stext-101 cl0 size-107 bg3 bor2 hov-btn3 p-lr-15 trans-04 m-b-10">
                            Back to Shop
                        </a>
                    </div>
                </div>
            </div>

        </div>
    </div>
        }

<scripts>
    <script src="/css/vendor/jquery/jquery-3.2.1.min.js"></script>

