@using WebShop.Models.Cart
@model ShoppingCartModel

<!-- Shoping Cart -->
<div id="fullCartView">
    <div id="cartForm">
        <form class="bg0 p-t-75 p-b-85">
            <div class="container">
                <div class="row">
                    <!-- Cart -->
                    <div class="col-lg-7 col-xl-8 m-lr-auto m-b-50">
                        <div class="m-l-25 m-r--38 m-lr-0-xl">
                            <div class="wrap-table-shopping-cart">
                                <table class="table-shopping-cart">
                                    <tr class="table_head">
                                        <th class="column-1">Product</th>
                                        <th class="column-2"></th>
                                        <th class="column-3">Price</th>
                                        <th class="column-5 m-r-100">Quantity</th>
                                        <th class="column-5">Total</th>
                                    </tr>
                                    @if (Model.ProductsInCart != null)
                                    {
                                        foreach (var product in Model.ProductsInCart)
                                        {
                                            <tr class="mt-5">
                                                <td class="column-1">
                                                    <div class="how-itemcart1 remove-from-cart-page" data-id="@product.Id">
                                                        <img src="/Umbraco/Api/Image/GetThumbnailFromProduct/@product.Id" alt="IMG">
                                                    </div>
                                                </td>
                                                <td class="column-2">@product.Title</td>
                                                <td class="column-3">@product.Price</td>
                                                <td class="ml-5">
                                                    <div class="wrap-num-product flex-w m-l-auto m-r-0">
                                                        <div class="btn-num-product-down cl8 hov-btn3 trans-04 flex-c-m adjust-cart-amount" data-id="@product.Id">
                                                            <i class="fs-16 zmdi zmdi-minus "></i>
                                                        </div>

                                                        <input class="mtext-104 cl3 txt-center num-product" type="number" name="num-product1" id="@product.Id" value="@product.Amount">

                                                        <div class="btn-num-product-up cl8 hov-btn3 trans-04 flex-c-m adjust-cart-amount" data-id="@product.Id">
                                                            <i class="fs-16 zmdi zmdi-plus addAmountInCart"></i>
                                                        </div>
                                                    </div>
                                                </td>
                                                <td class="column-5">@product.getTotalPrice()</td>
                                            </tr>
                                        }
                                    }


                                </table>
                            </div>

                            <div class="flex-w flex-sb-m bor15 p-t-18 p-b-15 p-lr-40 p-lr-15-sm mb-5">

                                <div class="w-full">
                                    <div class="float-right">
                                        <div class="header-cart-total mr-3">
                                            Total: @Model.getCartTotal() Kr.
                                        </div>
                                    </div>
                                </div>

                                <div class="w-full">
                                    <div class="float-left">
                                        <div class="header-cart-buttons mt-2">
                                            <a href="../shop" class="flex-c-m stext-101 cl0 size-107 bg3 bor2 hov-btn3 p-lr-15 trans-04 m-b-10">
                                                Back to Shop
                                            </a>
                                        </div>
                                    </div>
                                    <div class="float-right">
                                        <div class="header-cart-buttons mt-2">
                                            <a href="checkout" class="flex-c-m stext-101 cl0 size-107 bg3 bor2 hov-btn3 p-lr-15 trans-04 m-b-10 checkout-click">
                                                Checkout
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>