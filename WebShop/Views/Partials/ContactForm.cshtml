@model WebShop.Models.ContactFormModel
    <div>
        @using (Html.BeginUmbracoForm("submitForm", "Contact"))
        {
            <h4 class="mtext-105 cl2 txt-center p-b-30">
                Send Us A Message
            </h4>

            <div class="bor8 m-b-20 how-pos4-parent">
                <input id="emailName" class="stext-111 cl2 plh3 size-116 p-l-62 p-r-30" type="text" name="name" placeholder="Your Name">
                <img class="how-pos4 pointer-none" src="../images/icons/icon-person.png" alt="ICON">
            </div>

            <div class="bor8 m-b-20 how-pos4-parent">
                <input id="emailMail" class="stext-111 cl2 plh3 size-116 p-l-62 p-r-30" type="email" name="email" placeholder="Your Email Address">
                <img class="how-pos4 pointer-none" src="../images/icons/icon-email.png" alt="ICON">
            </div>


            <div class="bor8 m-b-30">
                <textarea id="emailMessage" class="stext-111 cl2 plh3 size-120 p-lr-28 p-tb-25" name="Message" placeholder="How Can We Help?"></textarea>
            </div>

            <input class="flex-c-m stext-101 cl0 size-121 bg3 bor1 hov-btn3 p-lr-15 trans-04 pointer" id="contactFormSubmit" type="submit" name="Submit" value="Send Message" />
        }
    </div>
