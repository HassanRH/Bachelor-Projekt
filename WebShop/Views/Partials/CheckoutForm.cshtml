@model WebShop.Models.CheckOutForm

<!-- Shoping Cart -->
<div class="bg0 p-t-75 p-b-85">
    <div class="container">
        @using (Html.BeginUmbracoForm("submitForm", "Checkout", FormMethod.Post))
        {
            <div class="row">
                <div class="col-sm-10 col-lg-10 col-xl-7 mx-auto">
                    <div class="bor10 p-lr-40 p-t-30 p-b-40 m-l-63 m-r-40 m-lr-0-xl p-lr-15-sm mb-5">
                        <h3 class="txt-center mb-5"> Delivery Information </h3>

                        <div class="m-tb-10">
                            @Html.Partial("Components/CountryDropdown")
                        </div>

                            <input class="w-100 stext-108 cl2 plh6 size-117 bor13 p-lr-20 m-r-10 m-tb-5" type="email" name="email" placeholder="Email" value="@Model.Email">

                            <div class="form-inline">
                                <input class="w-50 stext-104 cl2 plh4 size-117 bor13 p-lr-20 m-tb-5" type="text" name="first_name" placeholder="First name" value="@Model.First_Name">
                                <input class="w-50 stext-104 cl2 plh4 size-117 bor13 p-lr-20 m-tb-5" type="text" name="last_name" placeholder="Last name" value="@Model.Last_Name">
                            </div>

                            <input class="w-100 stext-104 cl2 plh4 size-117 bor13 p-lr-20 m-r-10 m-tb-5 mb-2" type="text" name="company" placeholder="Company(Optional)" value="@Model.Company">
                            <input class="w-100 stext-104 cl2 plh4 size-117 bor13 p-lr-20 m-r-10 m-tb-5 mb-2" type="text" name="address" placeholder="Address" value="@Model.Address">
                            <input class="w-100 stext-104 cl2 plh4 size-117 bor13 p-lr-20 m-r-10 m-tb-5" type="text" name="apartsuite" placeholder="Apartment, suite, etc. (optional)" value="@Model.Apartsuite">

                            <div class="form-inline">
                                <input class="w-25 stext-104 cl2 plh4 size-117 bor13 p-lr-20 m-tb-5" type="text" name="zipcode" placeholder="Zip code" value="@Model.ZipCode">
                                <input class="w-75 stext-104 cl2 plh4 size-117 bor13 p-lr-20 m-tb-5" type="text" name="city" placeholder="City" value="@Model.City">
                            </div>

                            <input class="w-50 stext-104 cl2 plh4 size-117 bor13 p-lr-20 m-r-10 m-tb-5" type="text" name="phone" placeholder="Phone" value="@Model.Phone">
                            @if (Model.Message != null)
                            {
                                <div class="ml-2 mt-3">
                                    <a class="stext-110 cl2" style="color:red;">@Model.Message</a>
                                </div>
                            }

                        </div>
                    </div>

                <div class="col-sm-10 col-lg-10 col-xl-5 mx-auto">
                    <div class="bor10 p-lr-40 p-t-30 p-b-40 m-l-63 m-r-40 m-lr-0-xl p-lr-15-sm">
                        <h3 class="txt-center mb-5"> Cart Totals </h3>

                        <div class="flex-w flex-t bor12 p-b-13">
                            <div class="size-208">
                                <span class="stext-110 cl2">
                                    Subtotal:
                                </span>
                            </div>

                            <div class="size-209">
                                <span class="mtext-110 cl2">
                                    @Model.getTotalPrice() Kr.
                                </span>
                            </div>
                        </div>

                        <div class="flex-w flex-t bor12 p-t-15 p-b-30">
                            <div class="size-208 w-full-ssm">
                                <span class="stext-110 cl2">
                                    Shipping:
                                </span>
                            </div>

                            <div class="size-209 p-r-18 p-r-0-sm w-full-ssm">
                                <p class="stext-111 cl2 p-t-2">
                                    <select name="Shipping" class="browser-default custom-select bor13 p-l-25 size-117">
                                        <option value="UPS">UPS Shipping 65</option>
                                        <option value="PostNord">Postnord Hjemmelevering 45</option>
                                        <option value="DAO">DAO pakkeshop 30</option>
                                    </select>
                                    <!--There are no shipping methods available. Please double check your address, or contact us if you need any help.-->
                                </p>

                            </div>
                        </div>

                        <div class="flex-w flex-t p-t-27 p-b-33">
                            <div class="size-208">
                                <span class="mtext-101 cl2">
                                    Total:
                                </span>
                            </div>

                            <div class="size-209 p-t-1">
                                <span class="mtext-110 cl2">
                                    @Model.getTotalPrice() Kr.
                                </span>
                            </div>
                        </div>

                        <input id="updateCartCheckout" href="" type="submit" name="Submit" value="Proceed to Payment" class="flex-c-m stext-101 cl0 size-116 bg3 bor14 hov-btn3 p-lr-15 trans-04 pointer">

                    </div>
                </div>
            </div>
        }
        <div class="row">
            <div class="p-lr-40 p-t-30 p-b-40 m-l-63 m-r-40 m-lr-0-xl p-lr-15-sm ml-5">
                <div class="header-cart-buttons flex-w w-full">
                    <a href="../shop/cart" class="flex-c-m stext-101 cl0 size-107 bg3 bor2 hov-btn3 p-lr-15 trans-04 m-lr-auto m-b-50">
                        Back to Cart
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
